
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head> 
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Telegin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/fontawesome.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Telegin.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/fontawesome.min.css"/>
    <link rel="stylesheet" href="~/font-awesome/css/solid.css"/>
    <link rel="stylesheet" href="~/css/CheckboxTeleginExample.css"/>
    <title>Maxim_Telegin</title>
</head>

<body>
<header>
    <!-- Панель навигации -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <!-- меню сайта -->
        <a class="navbar-brand" href="#">WebLabsV03</a>
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="#">Лб 1</a>
            <a class="nav-item nav-link" href="#">Каталог</a>
            <a class="nav-item nav-link" href="#">Администрирование</a>
        </div>
        <!-- меню сайта - конец -->
        <!-- Информация пользователя -->
        <a href="#" class="navbar-text ms-auto">
            00,0 руб <i class="fa-solid fa-cart-shopping"></i> (0)
        </a>
        <div class="dropdown ms-4 nav-color">
            <button class="btn btn-secondary dropdown-toggle"
                    type="button" id="dropdownMenuButton"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                User@gmail.com
                <img src="images/default-profile-picture.png" width="30"
                     alt="User" class="rounded nav-color" />
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li>
                    <span class="dropdown-item-text">
                        <img src="images/default-profile-picture.png"
                             width="50" alt="User" class="rounded" />
                        user@gmail.com
                    </span>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form id="logoutForm" class="form-inline" action="#">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
                            Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>
    </header><!-- header - конец -->
    <main class="container">
        <h1> Лабораторная работа 1</h1>
        <h2> Список </h2>
        <ol type="A" style="margin-left:50px" class="listcheck1">
            <li> элемент 0 списка;</Li>
            <li> элемент 1 списка;</Li>
            <li> элемент 2 списка;</Li>
            <li> элемент 3 списка;</Li>
            <li> элемент 4 списка;</Li>
        </ol>
            <p style="margin-bottom:70px"> </p>
        <hr />
        <div>
            <h2>Форма</h2>

            @* Checkbox. I did it myself *@
            <p style="margin-bottom:60px"></p>
            <form style="margin-left:50px" action="https://localhost:7023/" method="get" >
                <p>
                    <label class="checkbox-container">
                        <input type="checkbox" id="checkbox1"/>
                        Чек-бокс1
                    </label>
                </p>
                <p>
                    <label class="checkbox-container">
                        <input type="checkbox" id="checkbox2" />
                        Чек-бокс2
                    </label>
                </p>

                @* Radiobutton coppy http://www.getbootstrap.com *@
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="radio-1" 
                        id="radio-1" value="option1"  checked>
                    <label class="form-check-label" for="radio-1">radio-1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="radio-2" 
                        id="radio-2" value="option1">
                    <label class="form-check-label" for="radio-2">radio-2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="radio-3" 
                        id="radio-3" value="option1">
                    <label class="form-check-label" for="radio-3">radio-3 </label>
                </div>

                @* Form registration coppy http://www.getbootstrap.com *@
                @* Fill in login *@
                <div class="row" style="margin-top:60px">
                    <label for="RowLogin" class="col-sm-2 col-form-label col-form-label-lg">
                        Login
                    </label>
                    <div class="col-sm-10" style="margin-bottom:20px">
                        <input type="email" class="form-control form-control-lg" id="RowLogin"
                            placeholder="Login">
                    </div>
                </div>

                @* Fill in password *@
                <div class="row" style="margin-bottom:60px">
                    <label for="RowPassword" class="col-sm-2 col-form-label col-form-label-lg">
                        Password
                    </label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control form-control-lg" id="RowPassword"
                            placeholder="Password" style="margin-bottom:20px">
                    </div>
                </div>
                @* Button "send", it is copy from http://www.getbootstrap.com *@
                <button type="submit" class="btn btn-info" style="margin-bottom:60px">Send</button>
            </form>
        </div>  

    </main>





    <footer>
       <div class="container">
            <span class="nav-color">Подвал страницы</span>
        </div>
        <div class="navbar navbar-dark navbar-expand-md bg-dark">
            <div class="navbar-nav ms-auto">
                <a class="nav-item nav-link" href="http://www.facebook.com">
                    <i class="fa-brands fa-facebook-f fa-2x"></i>
                </a>
                <a class="nav-item nav-link" href="http://www.vk.com">
                    <i class="fa-brands fa-vk fa-2x"></i>
                </a>
                <a class="nav-item nav-link" href="http://www.twitter.com">
                    <i class="fa-brands fa-twitter fa-2x"></i>
                </a>
            </div>
        </div>
    </footer>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
